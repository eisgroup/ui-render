{
  "name": "web",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "core": "*",
    "react": "16.8.0",
    "react-dom": "16.8.0",
    "react-scripts": "2.1.0"
  },
  "scripts": {
    "start": "yarn cors && yarn gql && yarn css && react-app-rewired start & yarn style",
    "build": "yarn css --minify && react-app-rewired build && yarn clean",
    "build-dist": "yarn delete ../../dist/web/* && cp -rf build/* ../../dist/web && yarn delete build && cp -rf ./config/* ../../dist/web",
    "test": "react-app-rewired test",
    "eject": "react-scripts eject",
    "css": "yarn gulp theme.config css",
    "cors": "open -a Google\\ Chrome --args --disable-web-security --user-data-dir",
    "gulp": "../../node_modules/gulp/bin/gulp.js",
    "gql": "yarn delete ./node_modules/.cache/babel-loader",
    "delete": "../../node_modules/rimraf/bin.js",
    "clean": "yarn delete {build/**/*.map,build/**/**/*.map}",
    "style": "yarn gulp --sourcemap"
  },
  "eslintConfig": {
    "extends": "react-app",
    "parserOptions": {
      "ecmaFeatures": {
        "legacyDecorators": true
      }
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "src/**/style"
    ],
    "globals": [
      "expect",
      "it",
      "test",
      "describe",
      "window",
      "jest",
      "fetch",
      "alert",
      "localStorage",
      "require",
      "URL"
    ]
  },
  "devDependencies": {
    "customize-cra": "^0.5.0",
    "gulp": "^3.9.1",
    "gulp-less": "^4.0.1",
    "gulp-livereload": "^4.0.0",
    "gulp-plumber": "^1.2.0",
    "gulp-rename": "^1.4.0",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-util": "^3.0.8",
    "gulp-watch": "^5.0.1",
    "less-plugin-autoprefix": "^2.0.0",
    "less-plugin-clean-css": "^1.5.1",
    "less-plugin-functions": "^1.0.0",
    "less-plugin-glob": "^2.0.2",
    "react-app-rewired": "^2.1.3",
    "rimraf": "^2.6.2",
    "semantic-ui-less": "2.4.1"
  }
}
